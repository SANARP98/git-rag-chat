# Repository Configuration
# Note: Repository path will be selected via Gradio UI, not needed here

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# LLM Provider Configuration
LLM_PROVIDER=codex  # Options: codex | ollama | chatgpt-enterprise
CODEX_PROFILE=  # Optional: Profile name from ~/.codex/config.toml (leave empty for default Enterprise)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=deepseek-coder:33b  # Alternatives: codellama:13b, qwen2.5-coder:32b, codellama:7b

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# File Watcher Configuration
DEBOUNCE_SECONDS=2  # Seconds to wait before processing file changes
POLL_INTERVAL=5     # Seconds between Git commit checks
REPO_MOUNT_PATH=    # Path to repository to watch (set when using file watcher)
REPO_ID=            # Repository UUID (obtained from API after adding repo)

# Gradio UI Configuration
GRADIO_SERVER_PORT=7860
GRADIO_ALLOWED_PATHS=/Users,/home  # Comma-separated list of allowed parent directories

# RAG Pipeline API
RAG_PIPELINE_HOST=rag-pipeline
RAG_PIPELINE_PORT=8001

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Database
METADATA_DB_PATH=/app/data/metadata/repos.db
